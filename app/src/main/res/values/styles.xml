<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo base para textos generales -->
    <style name="BaseText">
        <item name="android:fontFamily">@font/mario_font</item>
        <item name="android:textColor">#000000</item> <!-- Cambia a tu color preferido -->
    </style>

    <!-- Estilo para TextView de tÃ­tulos -->
    <style name="TitleText" parent="BaseText">

        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo para TextView de descripciones -->
    <style name="DescriptionText" parent="BaseText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <!-- Estilo para botones -->
    <style name="AppButton">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo para CardView del RecyclerView -->
    <style name="CardViewStyle">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardBackgroundColor">#E0E0E0</item> <!-- Color claro para contraste -->
    </style>
</resources>